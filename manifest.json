{
  "name": "Social Media Time Tracker",
  "description": "Tracks time spent on FB and Twitter",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2
}
